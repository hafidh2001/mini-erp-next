{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "..",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "../system/**/*",
    "../shared/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}