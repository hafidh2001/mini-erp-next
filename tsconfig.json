{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "backend/*": [
        "./backend/*"
      ],
      "frontend/*": [
        "./frontend/*"
      ],
      "shared/*": [
        "./shared/*"
      ],
      "system/*": [
        "./system/*"
      ]
    }
  },
  "include": [
    "backend/**/*",
    "frontend/**/*",
    "shared/**/*",
    "system/**/*"
  ]
}