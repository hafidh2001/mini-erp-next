{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "..",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./frontend/src/*"
      ]
    }
  },
  "include": [
    "../system/**/*",
    "../shared/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}